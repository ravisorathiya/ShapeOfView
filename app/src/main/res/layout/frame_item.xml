<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/const_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backimage"
    android:orientation="vertical">


    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/image_first"
        android:layout_width="222dp"
        android:layout_height="140dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:siBorderColor="@color/darkgray"
        app:siBorderWidth="6dp"
        app:siRadius="6dp"
        app:siSquare="false" />

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/image_second"
        android:layout_width="210dp"
        android:layout_height="140dp"
        android:layout_marginStart="64dp"
        android:src="@drawable/plus"
        app:layout_constraintBottom_toBottomOf="@+id/image_first"
        app:layout_constraintStart_toStartOf="@+id/image_first"
        app:layout_constraintTop_toBottomOf="@+id/image_first"
        app:layout_constraintVertical_bias="0.279"
        app:siBorderColor="@color/darkgray"
        app:siBorderWidth="6dp"
        app:siRadius="6dp"
        app:siSquare="false" />

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/image_third"
        android:layout_width="240dp"
        android:layout_height="140dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/plus"
        app:layout_constraintEnd_toEndOf="@+id/image_first"
        app:layout_constraintStart_toStartOf="@+id/image_first"
        app:layout_constraintTop_toTopOf="@+id/image_second"
        app:siBorderColor="@color/darkgray"
        app:siBorderWidth="6dp"
        app:siRadius="6dp"
        app:siSquare="false" />

    <TextView
        android:id="@+id/text_wish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|center_vertical|center_horizontal"
        android:text="@string/welcome"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="36sp"
        android:textStyle="italic|bold"
        app:layout_constraintStart_toStartOf="@+id/image_first"
        app:layout_constraintTop_toBottomOf="@+id/image_third" />


</androidx.constraintlayout.widget.ConstraintLayout>